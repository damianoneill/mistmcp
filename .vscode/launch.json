    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mistmcp",
            "type": "debugpy",
            "request": "launch",
            "module": "mistmcp",
            "args": [
                "-t",
                "stdio",
                "-m",
                "managed"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "python3",
            "env": {
                "MISTMCP_DEBUG": "true"
            },
        },
        {
            "name": "Python: Debug test file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
        }
    ]
}
